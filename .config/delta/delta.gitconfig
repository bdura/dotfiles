[core]
    pager = delta
[include]
    path = ./catppuccin.gitconfig
[interactive]
    diffFilter = delta --color-only
[delta]
    navigate = true    # use n and N to move between diff sections
    side-by-side = true
    line-numbers = true
    features = catppuccin-mocha
[merge]
    conflictstyle = zdiff3
